<% wrap_layout :layout do %>

<section class="page">
	<article class="blog-post">
		<div class="container">

			<% if current_article.data.post_image_url %>
			<div class="row">
				<div class="col-md-8 col-md-offset-2 blog-image">
					<%= image_tag current_article.data.post_image_url %>
				</div>
			</div>
			<% end %>

			<div class="row">
			    <div class="col-md-8 col-md-offset-2">
					<%= partial "layouts/blog_meta", locals: {article: current_article} %>

					<%= current_article.body %>
				</div>
			</div>
      <div class="row">
          <div class="col-md-8 col-md-offset-2 more-posts">
              <a class="hbtn black outline small" href="/blog.html">More posts</a>
          </div>
      </div>
		</div>
	</article>
</section>

<% end %>
